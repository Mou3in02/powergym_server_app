{% extends 'base_dashboard.html.twig' %}

{% block title %}Power GYM | Dashboard{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">

            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h4 class="h4 m-0">Les fichiers du backups</h4>
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Upload file</h3>
                                </div>
                                <div class="card-body">
                                    <div class="input-group mb-3">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="backup_file" name="backup_file" accept=".7z" required>
                                            <label class="custom-file-label backup_file_label" for="backup_file">Choose a file ...</label>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-primary" id="backup_upload_btn">
                                        <i class="fas fa-upload"></i> Upload fichier
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Fichiers uploadés</h3>
                                </div>
                                <div class="card-body">
                                    <table id="uploaded_table" class="table table-striped table-bordered">
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom du fichier</th>
                                            <th>Taille</th>
                                            <th>Date</th>
                                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                                <th>Actions</th>
                                            {% endif %}
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for file in uploadedFiles %}
                                            <tr>
                                                <td>{{ file.id }}</td>
                                                <td>{{ file.originalName }}</td>
                                                <td>{{ file.sizeDescription }}</td>
                                                <td>{{ file.uploadedAt|date('d/m/Y H:i:s') }}</td>
                                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                                    <td class="text-center">
                                                        <button class="btn btn-sm btn-danger delete_file" data-file-id="{{ file.id }}">Delete</button>
                                                    </td>
                                                {% endif %}
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>

    <div class="modal fade" id="uploadProgressModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Téléchargement du fichier en cours...</h5>
                </div>
                <div class="modal-body">
                    <div class="progress">
                        <div id="uploadProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%">0%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="uploadSuccessModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Succès</h5>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size:50px;"></i>
                    <p class="mt-3 mb-0">Le fichier a été importé avec succès.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteFileModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded shadow">
                <div class="modal-header bg-white">
                    <h5 class="modal-title text-dark">⚠️ Confirmation de suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bg-white text-dark">
                    Êtes-vous sûr de vouloir supprimer ce fichier ?
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteFileBtn">Oui</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteSuccessModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-body text-center p-4">
                    <i class="fas fa-check-circle text-success" style="font-size:50px;"></i>
                    <p class="mt-3 mb-0">Fichier supprimé avec succès.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <meta name="upload-url" content="{{ path('backups_upload_file') }}">
    <meta name="delete-url" content="{{ path('delete_backups_upload_file') }}">
    <script src="{{ asset('js/pages/file_upload/backup.js') }}"></script>
{% endblock %}
