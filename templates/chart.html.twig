{% extends 'base_dashboard.html.twig' %}

{% block title %}AdminLTE 3 | ChartJS{% endblock %}

{% block stylesheets %}
  {% include 'blocks/stylesheets.html.twig' %}
  {% include 'layout/sidebar.html.twig' %}
  {% include 'layout/navbar.html.twig' %}
{% endblock %}

{% block body %}
  <div class="wrapper">
    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>ChartJS</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">ChartJS</li>
              </ol>
            </div>
          </div>
        </div>
      </section>

      <section class="content">
        <div class="container-fluid">

          <!-- ROW BAR CHART -->
          <div class="row">
            <div class="col-md-12">
              <div class="card card-info">
                <div class="card-header">
                  <h3 class="card-title">Bar Chart</h3>
                </div>
                <div class="card-body">
                  <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
              </div>
            </div>
          </div>

          <!-- ROW DONUT CHART -->
          <div class="row">
            <div class="col-md-12">
              <div class="card card-danger">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h3 class="card-title mb-0">Donut Chart</h3>
                </div>
                <div class="card-body">
                  <input type="date" id="customDate" class="form-control form-control-sm w-auto mb-2 float-right" />
                  <canvas id="donutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; width: 100%;"></canvas>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>

    </div>

    <footer class="main-footer">
      <div class="float-right d-none d-sm-block">
        <b>Version</b> 3.2.0
      </div>
      <strong>&copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
    </footer>
  </div>

  {% block javascripts %}
    {% include 'blocks/javascripts.html.twig' %}
    <script>
      $(function () {
        const ctxDonut = $('#donutChart').get(0).getContext('2d');
        let donutChart;

        const donutOptions = {
          maintainAspectRatio: false,
          responsive: true,
          plugins: {
            tooltip: {
              callbacks: {
                label: function(context) {
                  const label = context.label || '';
                  const value = context.parsed || 0;
                  return `${label}: ${value}`;
                }
              }
            }
          }
        };

        const fixedDayColors = {
          'Monday': '#4A90E2',
          'Tuesday': '#50E3C2',
          'Wednesday': '#F5A623',
          'Thursday': '#D0021B',
          'Friday': '#9013FE',
          'Saturday': '#F8E71C',
          'Sunday': '#B8E986',
          'No client': '#70726E'
        };

        function loadDonutChart(date = '') {
          fetch(`/chart?date=${date}`)
                  .then(response => response.json())
                  .then(result => {
                    const labels = result.labels;
                    const data = result.data.map(v => Number(v));

                    const allZero = data.every(value => value === 0);

                    let donutData, colors, donutLabels;

                    if (allZero) {
                      // Un seul secteur gris 100%
                      donutLabels = ['Aucun client cette semaine'];
                      colors = [fixedDayColors['No client']];
                      donutData = [100];
                    } else {
                      donutLabels = labels;
                      colors = labels.map(day => fixedDayColors[day] || '#CCCCCC');
                      donutData = data;
                    }

                    if (donutChart) {
                      donutChart.destroy();
                    }

                    donutChart = new Chart(ctxDonut, {
                      type: 'doughnut',
                      data: {
                        labels: donutLabels,
                        datasets: [{
                          data: donutData,
                          backgroundColor: colors,
                        }]
                      },
                      options: donutOptions
                    });
                  })
                  .catch(err => console.error('Erreur fetch:', err));
        }

        loadDonutChart();

        $('#customDate').on('change', function () {
          loadDonutChart(this.value);
        });

        // Bar chart (inchang√©)
        const labels = {{ labels|raw }};
        const values = {{ values|raw }};

        const ctxBar = document.getElementById('barChart').getContext('2d');
        new Chart(ctxBar, {
          type: 'bar',
          data: {
            labels: labels,
            datasets: [{
              label: 'Nombre de clients par mois',
              data: values,
              backgroundColor: 'rgba(60,141,188,0.9)',
              borderColor: 'rgba(60,141,188,1)',
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              y: {
                beginAtZero: true,
                ticks: {
                  precision: 0
                }
              }
            }
          }
        });
      });
    </script>



  {% endblock %}
{% endblock %}
