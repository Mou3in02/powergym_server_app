{# templates/pers_entry/chart.html.twig #}
{% extends 'base_dashboard.html.twig' %}

{% block title %}Statistiques des entrées{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <!-- Header -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h4 class="h4">Statistiques des entrées par mois</h4>
                    </div>
                </div>
            </div>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">

                <!-- Bar chart  -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-info">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h3 class="card-title">Entrées mensuelles {% if selectedClient %} ({{ selectedClient }}){% endif %}</h3>

                                {# Sélecteur client à l'intérieur du header #}
                                <form method="get" action="{{ path('pers_entry_chart') }}" class="form-inline">
                                    <label for="client" class="mr-2 font-weight-bold text-white">Client :</label>
                                    <select name="client" id="client" class="form-control form-control-sm mr-2" required>
                                        <option value="">-- Sélectionner --</option>
                                        {% for c in clients %}
                                            <option value="{{ c }}" {% if c == selectedClient %}selected{% endif %}>
                                                {{ c }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-light btn-sm">Rechercher</button>
                                </form>
                            </div>

                            <div class="card-body">
                                <canvas id="barChart"
                                        style="min-height: 250px; height: 250px; max-height: 400px; max-width: 100%;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                {# SECTION BAR CHART HEBDOMADAIRE #}
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card card-danger">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h3 class="card-title mb-0">Nombre de clients par jour (Semaine)</h3>

                                {# Sélecteur de date dans le header #}
                                <div class="form-inline">
                                    <label for="weekDate" class="mr-2 font-weight-bold text-white">Jour :</label>
                                    <input type="date" id="weekDate" class="form-control form-control-sm" value="{{ today|date('Y-m-d') }}">
                                </div>
                            </div>
                            <div class="card-body">
                                <span id="weekRange" style="line-height: 2.4rem; margin-bottom: 10px; display: block; font-weight: 600; color:#444;"></span>
                                <canvas id="weeklyBarChart"
                                        style="min-height: 250px; height: 250px; max-height: 400px; max-width: 100%; width: 100%;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card card-info">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h3 class="card-title mb-0">Nombre total de clients par mois</h3>
                            </div>
                            <div class="card-body">
                                <canvas id="totalMonthlyChart"
                                        style="min-height: 250px; height: 250px; max-height: 400px; max-width: 100%; width: 100%;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            const labels = {{ labels|raw }};
            const values = {{ values|raw }};

            const ctx = document.getElementById('barChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Nombre d’entrées par mois',
                        data: values,
                        backgroundColor: 'rgba(60,141,188,0.9)',
                        borderColor: 'rgba(60,141,188,1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        });

        $(function () {

            // --- CHART HEBDOMADAIRE ---
            const ctxWeekly = document.getElementById('weeklyBarChart').getContext('2d');
            let weeklyChart;

            function loadWeeklyChart(date = '') {
                fetch(`{{ path('pers_entry_weekly_chart') }}?date=${date}`)
                    .then(response => response.json())
                    .then(result => {
                        const labels = result.labels;
                        const data = result.data.map(v => Number(v));

                        if (weeklyChart) weeklyChart.destroy();

                        weeklyChart = new Chart(ctxWeekly, {
                            type: 'bar',
                            data: {
                                labels: labels,
                                datasets: [{
                                    label: 'Nombre de clients',
                                    data: data,
                                    backgroundColor: 'rgba(220,53,69,0.9)'
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                scales: {
                                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                                },
                                plugins: { legend: { display: true } }
                            }
                        });

                        // Afficher la plage de dates de la semaine
                        $('#weekRange').text(result.week_range);
                    })
                    .catch(err => console.error('Erreur fetch:', err));
            }

            // Initial load
            loadWeeklyChart($('#weekDate').val());

            $('#weekDate').on('change', function() {
                loadWeeklyChart(this.value);
            });
        });

        $(function () {
            const ctxTotalMonthly = document.getElementById('totalMonthlyChart').getContext('2d');

            // Mois en français
            const months = ['Janvier','Février','Mars','Avril','Mai','Juin','Juillet','Août','Septembre','Octobre','Novembre','Décembre'];

            // Récupération des données via fetch
            fetch('{{ path("pers_entry_total_monthly") }}')
                .then(response => response.json())
                .then(result => {
                    new Chart(ctxTotalMonthly, {
                        type: 'bar',
                        data: {
                            labels: months,
                            datasets: [{
                                label: 'Nombre de clients',
                                data: result.data,
                                backgroundColor: 'rgba(60,141,188,0.9)',
                                borderColor: 'rgba(60,141,188,1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: { stepSize: 1 }
                                }
                            },
                            plugins: {
                                legend: { display: true }
                            }
                        }
                    });
                })
                .catch(err => console.error('Erreur fetch total monthly:', err));
        });
    </script>
{% endblock %}
