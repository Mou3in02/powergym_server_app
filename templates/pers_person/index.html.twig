{% extends 'base.html.twig' %}

{% block title %}Power GYM | Dashboard{% endblock %}



{% block body %}


    <div class="wrapper">

        {% include 'layout/sidebar.html.twig' %}

        {% include 'layout/navbar.html.twig' %}

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Liste des personnes</h1>
                        </div>

                    </div>
                </div>
            </div>


            <section class="content">
                <div class="container-fluid">
                    <table id="pers_person_datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom & prénom</th>
                            <th>Date de création</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for person in persons %}
                            <tr>
                                <td>{{ person.id }}</td>
                                <td>{{ person.name }}</td>
                                <td>{{ person.createdAt }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>

        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/pages/per_person.js') }}"></script>
    {% endblock %}

{% endblock %}
