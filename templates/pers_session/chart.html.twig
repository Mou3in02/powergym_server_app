{% extends 'base_dashboard.html.twig' %}

{% block title %}Statistiques des séances individuelles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="content-wrapper">
        <!-- En-tête -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h4 class="h4">Statistiques des séances individuelles</h4>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contenu -->
        <section class="content">
            <div class="container-fluid">

                <!-- BAR CHART (MENSUEL : NOMBRE DE CLIENTS) -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Graphique mensuel (nombre de clients)</h3>
                            </div>
                            <div class="card-body">
                                <canvas id="barChart"
                                        data-labels='{{ labels|raw }}'
                                        data-values='{{ values|raw }}'
                                        style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;">
                                </canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- WEEKLY BAR CHART (CLIENTS PAR JOUR) -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-danger">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h3 class="card-title mb-0">Graphique hebdomadaire (clients par jour de la semaine)</h3>
                            </div>
                            <div class="card-body">
                                <input type="date" id="customDate"
                                       class="form-control form-control-sm w-auto mb-2 float-right"/>
                                <span id="weekRange"
                                      style="line-height: 2.4rem; margin-left: 10px; font-weight: 600; color:#444;"></span>
                                <canvas id="weeklyBarChart"
                                        style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; width: 100%;">
                                </canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BAR CHART (MENSUEL : TOTAL DES PRIX) -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Graphique mensuel (total des prix)</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="barChart1"
                                data-labels='{{ pieLabels|raw }}'
                                data-values='{{ pieValues|raw }}'
                                style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;">
                        </canvas>
                    </div>
                </div>

            </div>
        </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/pers_session/pers_session_chart.js') }}"></script>
{% endblock %}
